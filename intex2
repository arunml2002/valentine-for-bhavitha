  <script>
    // ====== CHANGE THIS ONLY (your audio filename) ======
    const AUDIO_FILE = "valentine.mp3"; // e.g. "mysong.mp3"
    // ===================================================

    // Sunflowers
    const floatLayer = document.getElementById("floatLayer");
    function spawnSunflowers(count = 8){
      for(let i=0;i<count;i++){
        const el = document.createElement("div");
        el.className = "floater";
        el.textContent = "üåª";
        const left = Math.random() * 100;
        const dur = 3.6 + Math.random() * 3.0;
        const dx = (Math.random() * 160 - 80).toFixed(0) + "px";
        el.style.left = left + "%";
        el.style.setProperty("--dx", dx);
        el.style.animationDuration = dur + "s";
        el.style.fontSize = (22 + Math.random() * 22).toFixed(0) + "px";
        floatLayer.appendChild(el);
        setTimeout(() => el.remove(), dur * 1000);
      }
    }
    spawnSunflowers(26);
    setInterval(() => spawnSunflowers(6), 900);

    // Elements
    const page1Left = document.getElementById("page1Left");
    const page2Left = document.getElementById("page2Left");
    const page3Left = document.getElementById("page3Left");
    const page1Right = document.getElementById("page1Right");
    const page2Right = document.getElementById("page2Right");
    const page3Right = document.getElementById("page3Right");

    const pressBtn = document.getElementById("pressBtn");
    const yesBtn = document.getElementById("yesBtn");
    const noBtn = document.getElementById("noBtn");
    const noMsg = document.getElementById("noMsg");

    const loveAudio = document.getElementById("loveAudio");
    const musicPrompt = document.getElementById("musicPrompt");
    const playMusicBtn = document.getElementById("playMusicBtn");

    const lexiStamp = document.getElementById("lexiStamp");

    // Easter egg
    const sunBadge = document.getElementById("sunBadge");
    const eggMsg = document.getElementById("eggMsg");
    let taps = 0;

    loveAudio.src = AUDIO_FILE;

    function showStep(step){
      [page1Left,page2Left,page3Left,page1Right,page2Right,page3Right].forEach(el => el.classList.remove("active"));
      if(step === 1){
        page1Left.classList.add("active");
        page1Right.classList.add("active");
      }
      if(step === 2){
        page2Left.classList.add("active");
        page2Right.classList.add("active");
      }
      if(step === 3){
        page3Left.classList.add("active");
        page3Right.classList.add("active");
      }
    }

    function startMusicNow(){
      musicPrompt.classList.remove("show");
      try{
        loveAudio.currentTime = 0;
        const p = loveAudio.play();
        if(p && typeof p.catch === "function"){
          p.catch(() => musicPrompt.classList.add("show"));
        }
      }catch(e){
        musicPrompt.classList.add("show");
      }
    }

    function stopMusic(){
      try{
        loveAudio.pause();
        loveAudio.currentTime = 0;
      }catch(e){}
    }

    document.addEventListener("visibilitychange", () => {
      if(document.hidden) stopMusic();
    });

    // Lexi press: play first, then go to page 2, then show stamp
    function onLexiPress(e){
      if(e) e.preventDefault();

      // play immediately in the gesture handler
      startMusicNow();

      // switch page
      showStep(2);

      // stamp pop after page shows
      lexiStamp.classList.remove("show");
      setTimeout(() => lexiStamp.classList.add("show"), 120);
    }

    pressBtn.addEventListener("pointerdown", onLexiPress);
    pressBtn.addEventListener("touchstart", onLexiPress, { passive: false });
    pressBtn.addEventListener("click", onLexiPress);

    playMusicBtn.addEventListener("click", () => startMusicNow());
    playMusicBtn.addEventListener("touchstart", (e) => { e.preventDefault(); startMusicNow(); }, { passive: false });

    const noLines = [
      "Nice try üòå",
      "Lexi says press Yes üê∂",
      "Pleaseeee ü•∫",
      "That button is fake üò§",
      "Ok now press Yes BOO BOO üíõ"
    ];
    let noCount = 0;

    noBtn.addEventListener("click", () => {
      noMsg.textContent = noLines[noCount % noLines.length];
      noCount += 1;

      const scale = 1 + Math.min(noCount * 0.12, 1.2);
      yesBtn.style.transform = `scale(${scale})`;

      const x = (Math.random() * 160 - 80).toFixed(0);
      const y = (Math.random() * 70 - 35).toFixed(0);
      noBtn.style.transform = `translate(${x}px, ${y}px)`;
    });

    yesBtn.addEventListener("click", () => {
      stopMusic();
      showStep(3);
      spawnSunflowers(40);
    });

    // Easter egg: tap badge 5 times on page 1
    function badgeTap(e){
      if(e) e.preventDefault();
      taps += 1;

      // tiny feedback without being loud
      sunBadge.style.transform = "scale(1.02)";
      setTimeout(() => sunBadge.style.transform = "scale(1)", 90);

      if(taps >= 5){
        eggMsg.classList.add("show");
        taps = 5;
      }
    }
    sunBadge.addEventListener("click", badgeTap);
    sunBadge.addEventListener("touchstart", badgeTap, { passive: false });

    showStep(1);
  </script>
</body>
